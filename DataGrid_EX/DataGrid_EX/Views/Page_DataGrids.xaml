<Page x:Class="DataGrid_EX.Views.Page_DataGrids"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DataGrid_EX.Views"
      xmlns:localVM="clr-namespace:DataGrid_EX.ViewModels"
      xmlns:ap="clr-namespace:DataGrid_EX.AttachPropertys"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_DataGrids">
    <d:Window.DataContext>
        <localVM:Page_DataGrids_VM/>
    </d:Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="➕ 增加欄位" 
                Command="{Binding AddColumnCommand}" 
                Padding="10,5" Margin="0,0,10,0"/>

            <Button Content="➖ 刪除欄位" 
                Command="{Binding DeleteColumnCommand}" 
                Padding="10,5"/>
        </StackPanel>
        <DataGrid Grid.Row="1" AutoGenerateColumns="False" ItemsSource="{Binding Rows}" ap:DataGridHelper.DynamicColumns="{Binding ColumnInfos}" ap:DataGridSharedSizeHelper.SharedSizeGroup="g1">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Margin" Value="0" />
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>
        <DataGrid Grid.Row="2" AutoGenerateColumns="False" ItemsSource="{Binding Rows2}" ap:DataGridHelper.DynamicColumns="{Binding ColumnInfos}" ap:DataGridSharedSizeHelper.SharedSizeGroup="g1">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Margin" Value="0" />
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>
        <!--<DataGrid ItemsSource="{Binding Rows}"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          AlternationCount="999999">
           

            <DataGrid.Columns>

                
         --><!--Row Index Column (TemplateColumn)--><!-- 
        
                <DataGridTemplateColumn Width="45"
                                IsReadOnly="True"
