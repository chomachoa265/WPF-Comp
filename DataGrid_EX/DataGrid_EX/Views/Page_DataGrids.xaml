<Page x:Class="DataGrid_EX.Views.Page_DataGrids"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DataGrid_EX.Views"
      xmlns:localVM="clr-namespace:DataGrid_EX.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_DataGrids">
    <d:Window.DataContext>
        <localVM:Page_DataGrids_VM/>
    </d:Window.DataContext>
    <Grid>
        <DataGrid ItemsSource="{Binding Rows}"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          AlternationCount="999999">
           

            <DataGrid.Columns>

                
         <!--Row Index Column (TemplateColumn)--> 
        
                <DataGridTemplateColumn Width="45"
                                IsReadOnly="True"
                                CanUserSort="False"
                                CanUserResize="False"
                                Header="#">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow},
                                              Path=AlternationIndex}"
                               HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                
         <!--以下全部都是正常 DataGridTextColumn，不破壞排序--> 
        
                <DataGridTextColumn Header="Name"
                            Binding="{Binding Revenue}"
                            SortMemberPath="Name" />

                <DataGridTextColumn Header="Age"
                            Binding="{Binding Age}"
                            SortMemberPath="Age" />

                <DataGridTextColumn Header="Score"
                            Binding="{Binding Familys}"
                            SortMemberPath="Score" />

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
