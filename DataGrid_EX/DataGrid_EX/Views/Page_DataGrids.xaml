<Page x:Class="DataGrid_EX.Views.Page_DataGrids"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:behaviors="clr-namespace:DataGrid_EX.AttachedBehavior"
      xmlns:ext="clr-namespace:DataGrid_EX.Extensions"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DataGrid_EX.Views"
      xmlns:localVM="clr-namespace:DataGrid_EX.ViewModels"
      xmlns:ap="clr-namespace:DataGrid_EX.AttachPropertys"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_DataGrids">
    <d:Window.DataContext>
        <localVM:Page_DataGrids_VM/>
    </d:Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" Margin="0,0,0,10">
            <GroupBox Header="Row Operations" Margin="0,0,10,0" Padding="5">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Add Row" Command="{Binding AddRowCommand}" 
                            Width="80" Margin="5"/>
                    <Button Content="Delete Row" Command="{Binding RemoveRowCommand}" 
                            Width="80" Margin="5" Background="#FFCCCC"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Column Operations" Padding="5">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Add Col" Command="{Binding AddColumnCommand}" Margin="5"/>
                    <Button Content="Del Col" Command="{Binding RemoveColumnCommand}" Margin="5"/>
                </StackPanel>
            </GroupBox>
        </WrapPanel>

        <DataGrid x:Name="TopGrid" Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding GridData}"
                  ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                  
                  ext:DataGridExtensions.BindableColumns="{Binding GridColumns}">

            <i:Interaction.Behaviors>
                <behaviors:DataGridSyncBehavior TargetGrid="{Binding ElementName=BottomGrid}" />
            </i:Interaction.Behaviors>
        </DataGrid>

        <DataGrid x:Name="BottomGrid" Grid.Row="3"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding GridData}"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  
                  ext:DataGridExtensions.BindableColumns="{Binding GridColumns}">
        </DataGrid>
    </Grid>
