<Window x:Class="DataGrid_EX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ap="clr-namespace:DataGrid_EX.AttachedBehavior"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataGrid_EX"
        xmlns:localVM="clr-namespace:DataGrid_EX.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <d:Window.DataContext>
        <localVM:AdornerExWindow_VM />
    </d:Window.DataContext>

    <Grid>
        <DataGrid ItemsSource="{Binding Rows}"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          AlternationCount="999999">
           

            <DataGrid.Columns>

                <!-- Row Index Column (TemplateColumn) -->
                <DataGridTemplateColumn Width="45"
                                IsReadOnly="True"
                                CanUserSort="False"
                                CanUserResize="False"
                                Header="#">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow},
                                              Path=AlternationIndex}"
                               HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- 以下全部都是正常 DataGridTextColumn，不破壞排序 -->
                <DataGridTextColumn Header="Name"
                            Binding="{Binding Revenue}"
                            SortMemberPath="Name" />

                <DataGridTextColumn Header="Age"
                            Binding="{Binding Age}"
                            SortMemberPath="Age" />

                <DataGridTextColumn Header="Score"
                            Binding="{Binding Familys}"
                            SortMemberPath="Score" />

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
