<Window x:Class="DataGrid_EX.AdonerExWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ap="clr-namespace:DataGrid_EX.AttachedBehavior"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataGrid_EX"
        xmlns:localM="clr-namespace:DataGrid_EX.Models"
        xmlns:localVM="clr-namespace:DataGrid_EX.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type localM:Box}">
            <TextBox Text="Select Me!"
                     Width="{Binding Width, Mode=TwoWay}"
                     Height="{Binding Height, Mode=TwoWay}"
                     AcceptsReturn="True"
                     
                     Canvas.Left="{Binding Left, Mode=TwoWay}"
                     Canvas.Top="{Binding Top, Mode=TwoWay}"
                     ap:AdornerBehavior.IsActive="{Binding IsSelected}">

                <TextBox.InputBindings>
                    <MouseBinding Gesture="LeftClick" 
                                  Command="{Binding DataContext.SelectCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                  CommandParameter="{Binding}"/>
                </TextBox.InputBindings>
            </TextBox>
        </DataTemplate>
    </Window.Resources>
    <d:Window.DataContext>
        <localVM:AdonerExWindow_VM />
    </d:Window.DataContext>

    <Grid>
        <TextBlock Text="123" />
    </Grid>
</Window>
