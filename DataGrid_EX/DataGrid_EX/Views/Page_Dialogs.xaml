<Page x:Class="DataGrid_EX.Views.Page_Dialogs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DataGrid_EX.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_Dialogs">
    <Page.Resources>
        <Style x:Key="DialogBorder" TargetType="Border">
            <Setter Property="Margin" Value="30" />
            <Setter Property="Width" Value="400" />
            <Setter Property="Background" Value="DimGray" />
            <Setter Property="BorderBrush" Value="#000" />
            <Setter Property="CornerRadius" Value="10" />
        </Style>
        <Style x:Key="DialogText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Page.Resources>
    <Grid>
        <Border Style="{StaticResource DialogBorder}">
        </Border>
    </Grid>
</Page>
